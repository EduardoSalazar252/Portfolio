            </form>*@

            <EditForm Model="_mailInfo" OnValidSubmit="@HandleValidSubmit" id="contact-form">
                <DataAnnotationsValidator />
                @*<div class="form-group">*@
                   
                  @*  <InputText class="iptxt" id="name" placeholder="Name" data-role="input" @bind-Value="_mailInfo.EmailName" />*@
                    <input name="name" type="text" id="name" class="inputForm2" placeholder="Name" @bind="@_mailInfo.EmailName">
                <ValidationMessage For="@(() => _mailInfo.EmailName)" style="text-align: initial;font-size: 14px;" />


                @*<InputText class="iptxt" id="email" placeholder="Email" data-role="input" @bind-Value="_mailInfo.EmailFrom" />*@
                <input name="email" type="text" id="email" placeholder="Email" @bind="@_mailInfo.EmailFrom" class="mtt-2">
                <ValidationMessage For="@(() => _mailInfo.EmailFrom)" style="text-align: initial;font-size: 14px;" />
                    
              
                  @*  <InputTextArea class="iptxtarea" id="comments" placeholder="Message" data-role="input" @bind-Value="_mailInfo.EmailContent" />*@
                <textarea name="comments" id="comments" placeholder="Message" class="mtt-2" @bind="@_mailInfo.EmailContent"></textarea>
                <ValidationMessage For="@(() => _mailInfo.EmailContent)" style="text-align: initial;font-size: 14px;" />

                <div class="mtt-2">
                    @if (!onSubmitLoading)
                    {
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fa fa-paper-plane fa-lg"></i> Send Message
                        </button>
                    }
                    else
                    {
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%">Sending...</div>
                        </div>
                    }
                </div>
              
                  

                 
                  @*  <input name="name" type="text" id="name" class="inputForm2" placeholder="Name">*@
                    
